{
  "compilerOptions": {
    /* Language & Runtime – aligned with xpell-core */
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2021", "DOM"],
    "strict": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    /* Project structure */
    "rootDir": "./src",
    "baseUrl": "./",

    /* No JS emit from tsc — Vite handles bundling, vpd handles types */
    "noEmit": true
  },
  "include": [
    "src",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "types"
  ]
}
