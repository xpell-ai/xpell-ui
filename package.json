{
  "name": "@xpell/ui",
  "version": "2.0.0-alpha.4",
  "description": "Xpell UI JS Framework",
  "type": "module",
  "files": [
    "dist",
    "docs",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "module": "./dist/xpell-ui.es.js",
  "main": "./dist/xpell-ui.cjs.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/xpell-ui.es.js",
      "require": "./dist/xpell-ui.cjs.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && pnpm run build:types",
    "build:types": "tsc --project tsconfig.types.json",
    "docs": "typedoc --options ./typedoc.json --tsconfig ./",
    "publish-alpha-next": "pnpm version prerelease --preid=alpha  && pnpm publish --tag alpha",
    "check:xdata-legacy": "sh -c 'rg -n \"_xd\\._o\\[\" src && { echo \"Legacy XData write detected\" >&2; exit 1; } || true'"
  },
  "author": "Tamir Fridman <fridman.tamir@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xpell-ai/xpell-ui.git"
  },
  "peerDependencies": {
    "@xpell/core": "^2.0.0-alpha",
    "animate.css": "^4.1.1"
  },
  "devDependencies": {
    "typedoc": "^0.25.13",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vite-plugin-dts": "^3.9.1",
    "animate.css": "^4.1.1",
    "@xpell/core": "^2.0.0-alpha"
  }
}
